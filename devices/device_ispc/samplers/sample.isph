#pragma once

#include "default.isph"

struct Sample1f {
  float v;
  float pdf;
};

inline Sample1f make_Sample1f(const float v, const float pdf)
{
  Sample1f s;
  s.v = v; 
  s.pdf = pdf;
  return s;
}

